New Product
<%= form_for @product, url: products_path(@product) do |form| %>
  Name: <%= form.text_field :name, required: true, pattern: "[a-zA]+" %>
  Quantity: <%= form.text_field :serial_number, required: true, pattern: "[Z1-9]+" %>
  Price: <%= form.text_field :price, required: true, pattern: "[Z1-9]+" %>
  <%= form.submit %>
<% end %>